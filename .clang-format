BasedOnStyle: Google
ColumnLimit: 120
IndentWidth: 4
AccessModifierOffset: -2
NamespaceIndentation: Inner
AllowShortIfStatementsOnASingleLine: WithoutElse
AllowShortEnumsOnASingleLine: false
DerivePointerAlignment: false
PointerAlignment: Left

IncludeCategories:
  # Core headers
  - Regex: '<core\/.*'
    Priority: 50

  # Main headers
  - Regex: '<app\/.*'
    Priority: 60

  # Self headers
  - Regex: '".*"'
    Priority: 10

  # C standard library
  - Regex: '<[[:alnum:]]+\.h>'
    Priority: 20

  # C++ standard library
  - Regex: '<[[:alnum:]_]+>'
    Priority: 30

  # Third-party libraries
  - Regex: '<.*'
    Priority: 40
